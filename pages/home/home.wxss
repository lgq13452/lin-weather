/* pages/home/home.wxss */
page {
  background-color: #a6b6cb;
  font-size: 16px;
  color: white;
}

.vtop {
  display: flex;
  padding: 20px;
  position: sticky;
  top: 0px;
  z-index: 999;
  background-color: #a6b6cb;
}

.vposition {
  flex: 8;
  text-align: center;
  color: white;
  font-size: 18px;
}

.weather {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 300px;
}

.temp {
  font-size: 66px;
  position: relative;
  padding: 0 25px;
}

.duc {
  font-size: 20px;
  position: absolute;
  top: 10px;
  right: 0;
}

.meteorological {
  padding: 10px;
}

.air-quality {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 5px;
  border-radius: 15px;
  position: relative;
}

.opacity {
  width: 100%;
  height: 100%;
  background-color: #d0d5da;
  opacity: .35;
  position: absolute;
  border-radius: 15px;
}

.vweather {
  display: flex;
  margin: 15px;
  color: white;
}

.vicon {
  /* flex: 1; */
  width: 30px;
}

.vdate {
  flex: 1.5;
}

.vtemp {
  flex: 3.5;
}

.vqlty {
  flex: 1;
  border-radius: 15px;
  position: relative;
}

.vopacity {
  width: 50%;
  height: 100%;
  background-color: #d0d5da;
  opacity: .35;
  position: absolute;
  border-radius: 15px;
  height: 21px;
  padding: 0 5px;
}

.viqlty {
  padding: 0 5px;
}

.hei-low {
  flex: 2.5;
  padding-left: 5px;
}

.see-more {
  margin: 15px;
  padding: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20px;
  position: relative;
}

.mask {
  opacity: .35;
  background-color: #d0d5da;
  border-radius: 20px;
  width: 100%;
  height: 100%;
  position: absolute;
}

.hourly {
  display: flex;
  margin: 15px;
  height: 150px;
  overflow-x: auto;
}

.mhours {
  min-width: 67px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mhours>view {
  margin: 7px 0;
}

.day {
  margin: 15px;
  font-size: 14px;
}

.sunrise-sunset {
  display: flex;
}

.sunrise {
  display: flex;
  margin-right: 20px;
}

.sunset {
  display: flex;
}

image {
  width: 24px;
  height: 24px;
}

.vtitle {
  font-size: 20px;
}

.vdesc {
  color: #c1cdd9;
}

.daily-forecast {
  margin-top: 15px;
  display: flex;
  justify-content: space-around;
}

.air-rain {
  margin: 30px 0;
  display: flex;
  justify-content: space-evenly;
}

.air-rain>view {
  background-color: #b5c0d0;
  width: 40%;
  border-radius: 30px;
  padding: 15px;
}

.vindex {
  display: flex;
  margin: 15px;
  flex-wrap: wrap;
  background-color: #b5c0d0;
  border-radius: 15px;
}

.vlei {
  width: 33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 15px 0;
}

.jtitle {
  margin: 10px 0;
}

.jtips {
  position: fixed;
  bottom: 0;
}

.zdyi{
  color:red
}
.vloading{
  background-color: #a6b6cb;
}
.vloading{
  background-color: transparent !important;
}