page {
  background-color: #a6b6cb;
  color: white;
}

ec-canvas {
  width: 100%;
  height: 350px;
  padding-top: 25px;
  padding-left: 25px;
}

.container {
  /* position: absolute; */
  position: sticky;
  top: 0px;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0;
}

.dayly {
  display: flex;
  margin: 15px;
  overflow-x: auto;
}

.mday {
  min-width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mday>view {
  margin: 7px 0;
}